{
  "compilerOptions": {
    "target": "es2016",
    "module": "ES2020",
    "moduleResolution": "Node16",
    "outDir": "dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "noUncheckedIndexedAccess": true,
    "noEmit": false,
    "declaration": true
  },
  "include": ["src/**/*"]
}
